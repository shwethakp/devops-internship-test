services:
  app:
    image: myimage
    working_dir: /mybuild
    volumes:
      - ./:/app
    environment:
      DB_HOST: mysql
      DB_USER: root
      DB_PASSWORD: secret
      DB_DATABASE: app_db

  mysql:
    image: mysql:8.0
    volumes:
      - todo-mysql-data:/db/init:/docker-entrypoint-initdb.d
    environment:
      MYSQL_ROOT_PASSWORD: secret
      MYSQL_DATABASE: app_db

volumes:
  todo-mysql-data:
