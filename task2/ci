node {         
      stage('Clone repository') {               
             
            checkout scm    
      } 
      stage('Build image') {   
      
            sh 'pwd'       
            sh 'docker build -t  myimage ./task2'
            sh 'sudo docker run -dp 8080:8080 myimage ./task2'
            sh 'docker ps'
       }  
       stage('Test image') {            
             sh 'echo "Tests passed"'        
            }    
          
     }
