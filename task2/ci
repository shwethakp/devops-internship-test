node {         
      stage('Clone repository') {               
             
            checkout scm    
      } 
      stage('Build image') {   
      
            sh 'cd task2/'       
            sh 'docker build -t  Goapp_image .'
            sh 'sudo docker run -dp 8080:8080 Goapp_image .'
            sh 'docker ps'
       }  
       stage('Test image') {            
             sh 'echo "Tests passed"'        
            }    
          
     }
